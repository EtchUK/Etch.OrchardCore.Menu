{% assign link = Model.ContentItem.Content.LinkMenuItemPart %}

{% assign isOpenNewTab = Model.ContentItem.Content.LinkMenuItem.OpenNewTab.Value %}

{% assign cssClasses = "" %}

{% if Model.ContentItem.Content.LinkVisualPart.Style.Text %}
    {% assign cssClasses = cssClasses | append: Model.ContentItem.Content.LinkVisualPart.Style.Text %}
{% endif %}

{% if Model.HasItems == "true" %}
    <a href="{{ link.Url | href }}" aria-haspopup="true" aria-expanded="false" class="{{ cssClasses }} js-nav-parent-link">
        {{ link.Name }}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 158.2">
            <path d="M225.8 0L128 97.8 30.2 0 0 30.2l128 128 128-128z"/>
        </svg>
    </a>
{% else %}
    <a href="{{ link.Url | href }}" class="{{ cssClasses }}" {% if isOpenNewTab %}target="_blank" rel="noopener noreferrer"{% endif %}>{{ link.Name }}</a>
{% endif %}
